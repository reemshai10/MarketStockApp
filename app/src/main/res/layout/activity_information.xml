<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainone"
    tools:context=".InformationActivity">

    <Button
        android:id="@+id/ab"
        android:layout_width="146dp"
        android:layout_height="66dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="168dp"
        android:text="Apple Info"
        android:textColor="#0C0C0C"
        android:textSize="14sp"
        app:backgroundTint="#00897B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/amb"
        android:layout_width="146dp"
        android:layout_height="66dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:text="amazon Info"
        android:textColor="#101010"
        android:textStyle="bold"
        app:backgroundTint="#00897B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ab" />

    <Button
        android:id="@+id/back"
        android:layout_width="146dp"
        android:layout_height="66dp"
        android:layout_marginEnd="260dp"
        android:layout_marginRight="260dp"
        android:layout_marginBottom="44dp"
        android:text="back"
        android:textColor="#101010"
        android:textStyle="bold"
        app:backgroundTint="#00897B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/gb"
        android:layout_width="146dp"
        android:layout_height="66dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="Google Info"
        android:textColor="#0C0C0C"
        android:textStyle="bold"
        app:backgroundTint="#00897B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ab"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tb"
        android:layout_width="146dp"
        android:layout_height="66dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="tesla Info"
        android:textColor="#0C0C0C"
        android:textStyle="bold"
        app:backgroundTint="#00897B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gb" />

</androidx.constraintlayout.widget.ConstraintLayout>